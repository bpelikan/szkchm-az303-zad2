{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
      "location": {
          "type": "string",
          "defaultValue": "westeurope"
      },
      "virtualNetworkName": {
          "type": "string",
          "defaultValue": "vnet"
      },
      "addressSpaces": {
          "type": "string",
          "defaultValue": "10.0.0.0/16"
      },
      "subnetCount": {
          "type": "int",
          "defaultValue": 2,
          "minValue": 1,
          "maxValue": 10
      },
      "subnet0_name": {
          "type": "string",
          "defaultValue": "[concat(parameters('virtualNetworkName'), '-sub0')]"
      },
      "subnet0_addressRange": {
          "type": "string",
          "defaultValue": "10.0.0.0/24"
      },
      "subnet1_name": {
          "type": "string",
          "defaultValue": "[concat(parameters('virtualNetworkName'), '-sub1')]"
      },
      "subnet1_addressRange": {
          "type": "string",
          "defaultValue": "10.0.1.0/24"
      },
      "ddosProtectionPlanEnabled": {
          "type": "bool",
          "defaultValue": false
      }
  },
  "variables": {},
  "resources": [
      {
          "type": "Microsoft.Network/VirtualNetworks",
          "apiVersion": "2019-09-01",
          "name": "[parameters('virtualNetworkName')]",
          "location": "[parameters('location')]",
          "dependsOn": [],
          "tags": {},
          "properties": {
              "addressSpace": {
                  "addressPrefixes": [
                      "[parameters('addressSpaces')]"
                  ]
              },
              "enableDdosProtection": "[parameters('ddosProtectionPlanEnabled')]"
          }
      },
      {
          "apiVersion": "2019-09-01",
          "type": "Microsoft.Network/virtualNetworks/subnets",
          "name": "[concat(parameters('virtualNetworkName'),'/',parameters('virtualNetworkName'), '-sub', copyIndex(0))]",
          "location": "[resourceGroup().location]",
          "properties": {
              "addressPrefix": "[concat('10.0.', copyIndex(0), '.0/24')]"
          },
          "copy": {
                "name": "subnetCount",
                "count": "[parameters('subnetCount')]",
                "mode": "Serial",
                "batchSize": 1
          },
          "dependsOn": [
                "[concat('Microsoft.Network/virtualNetworks/', parameters('virtualNetworkName'))]"
          ]
      }
  ]
}