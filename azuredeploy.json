{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.7",
  "parameters": {
      "virtualNetworkName": {
          "type": "string",
          "defaultValue": "vnet"
      },
      "virtualMachineName": {
          "type": "string"
      },
      "adminUsername": {
          "type": "secureString"
      },
      "adminPassword": {
          "type": "secureString"
      },
      "networkSecurityGroupRules": {
          "type": "array"
      },
      "accountType": {
          "type": "string",
          "defaultValue": "Standard_LRS"
      },
      "kind": {
          "type": "string",
          "defaultValue": "StorageV2"
      },
      "accessTier": {
          "type": "string",
          "defaultValue": "Hot"
      },
      "minimumTlsVersion": {
          "type": "string",
          "defaultValue": "TLS1_2"
      },
      "supportsHttpsTrafficOnly": {
          "type": "bool",
          "defaultValue": true
      },
      "allowBlobPublicAccess": {
          "type": "bool",
          "defaultValue": true
      }
  },
  "variables": {
    "storageAccountName": "[concat(uniqueString(subscription().subscriptionId), 'storage')]",
    "virtualMachineName0": "[concat(parameters('virtualMachineName'), '0')]",
    "virtualMachineName1": "[concat(parameters('virtualMachineName'), '1')]",
    "vmSubnet0": "[concat(parameters('virtualNetworkName'), '-sub0')]",
    "vmSubnet1": "[concat(parameters('virtualNetworkName'), '-sub1')]"
  },
  "resources": [
      {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "name": "vnet-deployment",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri":"https://raw.githubusercontent.com/bpelikan/szkchm-az303-zad2/vnet/vnet.json",
          "contentVersion":"1.0.0.7"
        },
        "parameters": {
            "virtualNetworkName":{
              "value": "[parameters('virtualNetworkName')]"
            }
          }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "dependsOn": ["vnet-deployment"],
      "name": "vm0-deployment",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri":"https://raw.githubusercontent.com/bpelikan/szkchm-az303-zad2/vnet/vm.json",
          "contentVersion":"1.0.0.7"
        },
        "parameters": {
            "virtualMachineName":{
              "value": "[variables('virtualMachineName0')]"
            },
            "adminUsername":{
              "value": "[parameters('adminUsername')]"
            },
            "adminPassword":{
              "value": "[parameters('adminPassword')]"
            },
            "virtualNetworkName":{
              "value": "[parameters('virtualNetworkName')]"
            },
            "vmSubnet":{
              "value": "[variables('vmSubnet0')]"
            },
            "networkSecurityGroupRules":{
              "value": "[parameters('networkSecurityGroupRules')]"
            }
          }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "dependsOn": ["vnet-deployment"],
      "name": "vm1-deployment",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri":"https://raw.githubusercontent.com/bpelikan/szkchm-az303-zad2/vnet/vm.json",
          "contentVersion":"1.0.0.7"
        },
        "parameters": {
            "virtualMachineName":{
              "value": "[variables('virtualMachineName1')]"
            },
            "adminUsername":{
              "value": "[parameters('adminUsername')]"
            },
            "adminPassword":{
              "value": "[parameters('adminPassword')]"
            },
            "virtualNetworkName":{
              "value": "[parameters('virtualNetworkName')]"
            },
            "vmSubnet":{
              "value": "[variables('vmSubnet1')]"
            },
            "networkSecurityGroupRules":{
              "value": "[parameters('networkSecurityGroupRules')]"
            }
          }
      }
    },
    {
        "type": "Microsoft.Storage/storageAccounts",
        "apiVersion": "2019-06-01",
        "name": "[variables('storageAccountName')]",
        "location": "[resourceGroup().location]",
        "comments": "Comments test 1",
        "metadata" : {
          "comments": "Comments test 2"
        },
        "properties": {
            "accessTier": "[parameters('accessTier')]",
            "minimumTlsVersion": "[parameters('minimumTlsVersion')]",
            "supportsHttpsTrafficOnly": "[parameters('supportsHttpsTrafficOnly')]",
            "allowBlobPublicAccess": "[parameters('allowBlobPublicAccess')]"
        },
        "dependsOn": [],
        "sku": {
            "name": "[parameters('accountType')]"
        },
        "kind": "[parameters('kind')]",
        "tags": {}
    }
  ],
  "outputs": {
    "testoutput": {
      "type": "string",
      "value": "[variables('storageAccountName')]"
    }
  }
}