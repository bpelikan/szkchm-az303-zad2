{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.7",
  "parameters": {
      "virtualNetworkName": {
          "type": "string",
          "defaultValue": "vnet"
      },
      "virtualMachineName": {
          "type": "string"
      },
      "adminUsername": {
          "type": "secureString"
      },
      "adminPassword": {
          "type": "secureString"
      },
      "networkSecurityGroupRules": {
          "type": "array"
      }
  },
  "variables": {
    "storageAccountName": "[concat(uniqueString(subscription().subscriptionId), 'storage')]",
    "virtualMachineName0": "[concat(parameters('virtualMachineName'), '0')]",
    "virtualMachineName1": "[concat(parameters('virtualMachineName'), '1')]",
    "vmSubnet0": "[concat(parameters('virtualNetworkName'), '-sub0')]",
    "vmSubnet1": "[concat(parameters('virtualNetworkName'), '-sub1')]"
  },
  "resources": [
      {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "name": "azuredeploy-vnet",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri":"https://raw.githubusercontent.com/bpelikan/szkchm-az303-zad2/vnet/vnet.json",
          "contentVersion":"1.0.0.7"
        },
        "parameters": {
            "virtualNetworkName":{
              "value": "[parameters('virtualNetworkName')]"
            }
          }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "dependsOn": ["azuredeploy-vnet"],
      "name": "azuredeploy-vm0",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri":"https://raw.githubusercontent.com/bpelikan/szkchm-az303-zad2/vnet/vm.json",
          "contentVersion":"1.0.0.7"
        },
        "parameters": {
            "virtualMachineName":{
              "value": "[variables('virtualMachineName0')]"
            },
            "adminUsername":{
              "value": "[parameters('adminUsername')]"
            },
            "adminPassword":{
              "value": "[parameters('adminPassword')]"
            },
            "virtualNetworkName":{
              "value": "[parameters('virtualNetworkName')]"
            },
            "vmSubnet":{
              "value": "[variables('vmSubnet0')]"
            },
            "networkSecurityGroupRules":{
              "value": "[parameters('networkSecurityGroupRules')]"
            }
          }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "dependsOn": ["azuredeploy-vnet"],
      "name": "azuredeploy-vm1",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri":"https://raw.githubusercontent.com/bpelikan/szkchm-az303-zad2/vnet/vm.json",
          "contentVersion":"1.0.0.7"
        },
        "parameters": {
            "virtualMachineName":{
              "value": "[variables('virtualMachineName1')]"
            },
            "adminUsername":{
              "value": "[parameters('adminUsername')]"
            },
            "adminPassword":{
              "value": "[parameters('adminPassword')]"
            },
            "virtualNetworkName":{
              "value": "[parameters('virtualNetworkName')]"
            },
            "vmSubnet":{
              "value": "[variables('vmSubnet1')]"
            },
            "networkSecurityGroupRules":{
              "value": "[parameters('networkSecurityGroupRules')]"
            }
          }
      }
    }
  ],
  "outputs": {
    "testoutput": {
      "type": "string",
      "value": "[variables('storageAccountName')]"
    }
  }
}